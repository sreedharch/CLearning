/*ARRAY OF POINTERS*/
#include <stdio.h>

const int MAX = 3;

int main() {
  printf("ARRAY OF POINTERS TO INTEGERS\n");
  int var[] = {10, 100, 200};
  int i, *ptr[MAX];

  for (i = 0; i < MAX; i++) {
    ptr[i] = &var[i]; // assign the address of integer
  }

  for (i = 0; i < MAX; i++) {
    printf("Value of var[%d] = %d\n", i, *ptr[i]);
  }

  printf("\n");
  printf("ARRAY OF POINTERS TO CHARACTERS\n");
  char *names[] = {
  "Zara Ali",
  "Hina Ali",
  "Nuha Ali"
  };
  for(i=0; i<MAX; i++) {
    printf("Values of names[%d] = %s\n", i, names[i]);
  }
  
}